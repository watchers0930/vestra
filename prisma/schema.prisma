generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  analyses      Analysis[]
  assets        Asset[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Analysis {
  id        String   @id @default(cuid())
  userId    String
  type      String
  typeLabel String
  address   String
  summary   String   @db.Text
  data      String   @db.Text
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Asset {
  id               String   @id @default(cuid())
  userId           String
  address          String
  type             String
  estimatedPrice   Float
  jeonsePrice      Float?
  safetyScore      Int
  riskScore        Int
  lastAnalyzedDate DateTime @default(now())
  priceHistory     String?  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, address])
}

model RateLimit {
  id         String   @id
  count      Int      @default(1)
  resetTime  DateTime
  createdAt  DateTime @default(now())

  @@index([resetTime])
}

model DailyUsage {
  id    String @id
  date  String
  count Int    @default(1)

  @@index([date])
}
